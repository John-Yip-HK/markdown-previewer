{
  "name": "markdown-previewer",
  "version": "1.0.0",
  "description": "A markdown previewer for freeCodeCamp assignment",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run watch:all",
    "lite": "lite-server",
    "scss": "sass assets/css:assets/css",
    "watch:scss": "onchange 'assets/css/*.scss' -- npm run scss",
    "watch:all": "parallelshell 'npm run watch:scss' 'npm run lite'"
  },
  "author": "John Yip",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/John-Yip-HK/markdown-previewer.git"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15",
    "@popperjs/core": "^2.10",
    "bootstrap": "^5.1",
    "dompurify": "^2.3.3",
    "marked": "^3.0.4"
  },
  "devDependencies": {
    "@clarencep/parallelshell": "^3.0.4",
    "grunt": "^1.4.1",
    "grunt-browser-sync": "^2.2.0",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^4.0.0",
    "grunt-contrib-htmlmin": "^3.1.0",
    "grunt-contrib-uglify": "^5.0.1",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-filerev": "^2.3.1",
    "grunt-sass": "^3.1.0",
    "grunt-usemin": "^3.1.1",
    "jit-grunt": "^0.10.0",
    "lite-server": "^2.6",
    "onchange": "^7.1",
    "sass": "^1.41",
    "time-grunt": "^2.0.0"
  }
}
